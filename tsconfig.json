{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "paths": {
      "@shebao/antdv": ["packages/components/src"],
      "@shebao/antdv/esm/*": ["packages/components/src/*"],
      "@shebao/antdv/lib/*": ["packages/components/src/*"],
      "@shebao/antdv-*": ["packages/*/src"]
    }
  },
  "vueCompilerOptions": {
    "target": 2.7
  }
}
